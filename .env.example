# API 配置文件
# 请填入你的 API 密钥

# ==========================================
# 日志控制（可选）
# ==========================================
# 控制终端 logging 输出级别：DEBUG / INFO / WARNING / ERROR / CRITICAL
# 也可以设置为 OFF 来完全关闭 logging
PTTS_LOG_LEVEL=INFO

# ==========================================
# 性能监控（可选）
# ==========================================
# 启用性能监控 - 统计各环节耗时并输出到终端
# 设置为 true 启用，false 禁用（默认禁用）
PTTS_ENABLE_TIMING=false

# ==========================================
# TTS 服务配置
# ==========================================

# ==========================================
# 豆包 RealtimeDialog（doubao_sample）
# ==========================================

# 火山控制台端到端大模型 / RealtimeDialog 的鉴权
DOUBAO_APP_ID=your_doubao_app_id_here
DOUBAO_ACCESS_KEY=your_doubao_access_key_here

# VikingDB 记忆存储（doubao_sample --memory）
VIKINGDB_AK=your_vikingdb_ak_here
VIKINGDB_SK=your_vikingdb_sk_here
VIKINGDB_COLLECTION=test1
VIKINGDB_USER_ID=1
VIKINGDB_USER_NAME=User
VIKINGDB_ASSISTANT_ID=111
VIKINGDB_ASSISTANT_NAME=Assistant

# 通义千问 TTS (Qwen3)
QWEN3_API_KEY=your_qwen3_api_key_here
QWEN3_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode

# ============================================
# 火山引擎 Seed2 TTS
# ============================================
# 获取方式: https://console.volcengine.com/speech/app
VOLCENGINE_APP_ID=your_volcengine_app_id_here
# 推荐使用 access_token（二选一）
VOLCENGINE_ACCESS_TOKEN=your_volcengine_access_token_here
# 或使用 api_key（二选一）
# VOLCENGINE_API_KEY=your_volcengine_api_key_here
VOLCENGINE_BASE_URL=https://openspeech.bytedance.com/api/v1

# ============================================
# MiniMax TTS
# ============================================
# 获取方式: https://api.minimax.chat/
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here
MINIMAX_BASE_URL=https://api.minimax.chat/v1

# ============================================
# OpenAI 兼容的 LLM API
# ============================================
# 支持 OpenAI、Azure OpenAI、或其他兼容 OpenAI 格式的 API

# OpenAI 官方 / 或其他 OpenAI 兼容服务
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
OPENAI_MODEL=qwen3-max

# ============================================
# 注意事项
# ============================================
# 1. 不要将此文件提交到公开仓库
# 2. 确保 .gitignore 中包含 .env 文件
# 3. 填写完成后,程序会自动读取这些配置

MEMORY_BACKEND=mem0

# ============================================
# Mem0 记忆管理（长期记忆）
# ============================================
ENABLE_MEM0=false
ENABLE_GRAPH=false
MEM0_USER_ID=default_user

# Mem0 LLM（用于记忆提取/Embedding）
# 如果不设置，将回退使用上面的 OPENAI_*（openai_compatible）
MEM0_LLM_API_KEY=your_openai_api_key_here
MEM0_LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
MEM0_LLM_MODEL=qwen-turbo

# Neo4j（可选：知识图谱）
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
